---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const postsByYear = posts.reduce((acc, post) => {
  const year = post.data.pubDate.getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof posts>);

const years = Object.keys(postsByYear).sort((a, b) => Number(b) - Number(a));
---

<BaseLayout title="归档 | Angela博客" description="博客文章归档">
  <div class="archive-container">
    <h1 class="page-title">归档</h1>
    
    {years.map((year) => (
      <div class="year-section">
        <h2 class="year-title">{year}</h2>
        <div class="posts-list">
          {postsByYear[Number(year)].map((post) => (
            <a href={`/posts/${post.slug}`} class="archive-item">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('zh-CN', { month: 'short', day: 'numeric' })}
              </time>
              <span class="post-title">{post.data.title}</span>
              {post.data.category && <span class="category-tag">{post.data.category}</span>}
            </a>
          ))}
        </div>
      </div>
    ))}

    {posts.length === 0 && (
      <div class="empty-state">
        <p>暂无归档</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .archive-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-title {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    text-align: center;
  }

  .year-section {
    margin-bottom: 3rem;
  }

  .year-title {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--glass-border);
    color: var(--accent);
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .archive-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .archive-item:hover {
    border-color: var(--accent);
    transform: translateX(8px);
  }

  .archive-item time {
    flex-shrink: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .archive-item .post-title {
    flex: 1;
    font-weight: 500;
  }

  .category-tag {
    flex-shrink: 0;
    padding: 0.2rem 0.6rem;
    background: rgba(102, 126, 234, 0.2);
    border-radius: 10px;
    font-size: 0.75rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .archive-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
