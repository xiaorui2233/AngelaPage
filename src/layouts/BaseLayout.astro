---
import backgroundConfig from '../data/background-config.json';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Angela的个人博客" } = Astro.props;
const config = backgroundConfig;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <script define:vars={{ config }}>
      window.__bgConfig = config;
    </script>
  </head>
  <body>
    {config.enabled && (
    <div class="background" id="background">
      {config.type === 'image' && config.image?.url && (
        <div class="bg-image" id="bg-image"></div>
      )}
      {(!config.type || config.type === 'gradient') && (
        <>
          <div class="gradient gradient-1"></div>
          <div class="gradient gradient-2"></div>
          <div class="gradient gradient-3"></div>
        </>
      )}
    </div>
    )}
    
    <header class="header">
      <nav class="nav">
        <a href="/AngelaPage/" class="logo">Angela</a>
        <div class="nav-links">
          <a href="/AngelaPage/">首页</a>
          <a href="/AngelaPage/archive">归档</a>
          <a href="/AngelaPage/tags">标签</a>
          <a href="/AngelaPage/search">搜索</a>
          <a href="/AngelaPage/friends">友链</a>
          <a href="/AngelaPage/about">关于</a>
        </div>
      </nav>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <p>&copy; 2026 <a href="/AngelaPage/" style="color: inherit;">Angela</a>. All rights reserved.</p>
    </footer>

    <script>
      (function() {
        const config = window.__bgConfig;
        if (!config || !config.enabled) return;

        const background = document.getElementById('background');
        const bgImage = document.getElementById('bg-image');
        const gradients = document.querySelectorAll('.gradient');
        
        if (!background) return;

        // 处理背景图片
        if (config.type === 'image' && config.image?.url && bgImage) {
          bgImage.style.backgroundImage = `url(${config.image.url})`;
          bgImage.style.opacity = config.image.opacity || 1;
          bgImage.style.backgroundSize = config.image.size || 'cover';
          bgImage.style.backgroundPosition = config.image.position || 'center';
          bgImage.style.backgroundRepeat = config.image.repeat || 'no-repeat';
        }

        // 处理渐变背景
        if ((!config.type || config.type === 'gradient') && gradients.length > 0) {
          // 设置渐变颜色
          if (config.fallbackGradient?.enabled) {
            if (gradients[0]) gradients[0].style.background = config.fallbackGradient.color1 || '#667eea';
            if (gradients[1]) gradients[1].style.background = config.fallbackGradient.color2 || '#764ba2';
            if (gradients[2]) gradients[2].style.background = config.fallbackGradient.color3 || '#f093fb';
          }
        }

        const centerX = window.innerWidth / 2;
        const centerY = window.innerHeight / 2;

        // 鼠标交互处理
        let targetX = 0, targetY = 0;
        let currentX = 0, currentY = 0;
        
        const parallaxEnabled = config.mouseInteraction?.parallax?.enabled;
        const parallaxStrength = parallaxEnabled ? (config.mouseInteraction.parallax.strength || 0.5) : 0;
        
        const zoomEnabled = config.mouseInteraction?.zoom?.enabled;
        const zoomSensitivity = zoomEnabled ? (config.mouseInteraction.zoom.sensitivity || 1.0) : 0;
        
        const panEnabled = config.mouseInteraction?.pan?.enabled;
        const panStrength = panEnabled ? (config.mouseInteraction.pan.strength || 0.3) : 0;

        document.addEventListener('mousemove', (e) => {
          targetX = (e.clientX - centerX) / centerX;
          targetY = (e.clientY - centerY) / centerY;
        });

        // 动画循环
        function animate() {
          currentX += (targetX - currentX) * 0.05;
          currentY += (targetY - currentY) * 0.05;

          // 处理背景图片
          if (bgImage && config.type === 'image') {
            let transform = '';
            
            // 平移效果
            if (panEnabled) {
              const offsetX = currentX * 100 * panStrength;
              const offsetY = currentY * 100 * panStrength;
              transform += `translate(${offsetX}px, ${offsetY}px)`;
            }
            
            // 缩放效果
            if (zoomEnabled) {
              const zoomFactor = 1 + (Math.abs(currentX) + Math.abs(currentY)) * 0.1 * zoomSensitivity;
              transform += (transform ? ' ' : '') + `scale(${zoomFactor})`;
            }
            
            if (transform) {
              bgImage.style.transform = transform;
            }
          }

          // 处理渐变球
          if (gradients.length > 0) {
            gradients.forEach((el, index) => {
              // 视差效果：不同层以不同速度移动
              const parallaxMultiplier = (index + 1) * 0.3;
              const offsetX = currentX * 50 * parallaxStrength * parallaxMultiplier;
              const offsetY = currentY * 50 * parallaxStrength * parallaxMultiplier;

              // 缩放效果
              const zoomFactor = 1 + (currentX * currentY * 0.1 * zoomSensitivity);

              el.style.transform = `translate(calc(-50% + ${offsetX}px), calc(-50% + ${offsetY}px)) scale(${zoomFactor})`;
            });
          }

          requestAnimationFrame(animate);
        }

        animate();
      })();
    </script>
  </body>
</html>

<style is:global>
  :root {
    --bg-primary: #0f0f23;
    --bg-secondary: rgba(255, 255, 255, 0.05);
    --text-primary: #ffffff;
    --text-secondary: rgba(255, 255, 255, 0.7);
    --accent: #667eea;
    --accent-secondary: #764ba2;
    --glass-bg: rgba(255, 255, 255, 0.1);
    --glass-border: rgba(255, 255, 255, 0.2);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'Noto Sans SC', sans-serif;
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    color: var(--text-primary);
    background: var(--bg-primary);
    line-height: 1.6;
    overflow-x: hidden;
  }

  .background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }

  .bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    will-change: transform;
    transition: transform 0.1s ease-out;
  }

  .gradient {
    position: absolute;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    will-change: transform;
  }

  @keyframes float {
    0%, 100% { transform: translate(-50%, -50%) translate(0, 0) scale(1); }
    25% { transform: translate(-50%, -50%) translate(30px, -30px) scale(1.05); }
    50% { transform: translate(-50%, -50%) translate(-20px, 20px) scale(0.95); }
    75% { transform: translate(-50%, -50%) translate(-30px, -20px) scale(1.02); }
  }

  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    padding: 1rem 2rem;
  }

  .nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
    background: linear-gradient(135deg, var(--accent), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--accent), var(--accent-secondary));
    transition: width 0.3s ease;
  }

  .nav-links a:hover {
    color: var(--text-primary);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    min-height: calc(100vh - 200px);
  }

  .footer {
    text-align: center;
    padding: 2rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .nav-links {
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .main {
      padding: 1rem;
    }
  }
</style>
